<?xml version="1.0"?>
<page xmlns:html="http://dev.w3.org/html5/html-author">
	<html:div id="flower"
			  class="windwalker sakura edit-form"
		>
		<form id="adminForm"
			  type="edit">
			<tabset name="sakura-edit"
					active="basic">
				<tab name="basic">
					<row class="yoo">
						<column name="left"
								span="8">
							<fieldset name="information"/>
							<fieldset name="text"/>
						</column>
						<column name="right"
								span="4">
							<fieldset name="publish"/>
						</column>
					</row>
				</tab>
				<tab name="advanced">
					<row>
						<column name="left">
							<fieldset name="created"
									  class="span8"/>
						</column>
					</row>
				</tab>
				<tab name="rules">
					<row>
						<column>
							<fieldset name="rules"/>
						</column>
					</row>
				</tab>
			</tabset>
		</form>
	</html:div>

	<block display="false">
		<call static="JHtmlFormbehavior::chosen">
			<argument>select</argument>
		</call>
	</block>
</page>
